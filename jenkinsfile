pipeline {
    agent any
    
    stages {
        
        stage("without docker") {
            steps {
                sh '''
                    echo "without docker"
                    ls -la
                    touch no-docker.txt
                '''
            }
        }
        stage("with docker") {
            agent {
                docker {
                      image 'node:18-alpine'
                      reuseNode true
                }
            }
            
            steps {
                sh '''
                    npm --version
                    ls -la
                    touch yes-docker.txt
                '''
            }
        }
        
    }

}
